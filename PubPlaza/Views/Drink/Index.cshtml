@{
    ViewData["Title"] = "Index";
}

<div>
    <h2>All drinks are shown here...</h2>
</div>

<h2>@Model.CurrentCategory</h2> 

@foreach (var drink in Model.Drinks)
{
    <div class="col-sm-4 col-md-4 col-lg-4">
        <div class="thumbnail">
            <img src="@Url.Content(@drink.ImageThumbnailUrl)" alt ="" />
            <div class="caption">
                <h3 class="pull-right">@drink.Price.ToString("c")</h3>
                <h3><a>@drink.DrinkName</a></h3>
            </div>
            <p>@drink.ShortDescription</p>
        </div>
    </div>
}

