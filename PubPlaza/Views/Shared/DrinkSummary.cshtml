@model Drink

<div class="col-sm-4 col-md-4 col-lg-4">
    <div class="thumbnail">
        <img src="@Url.Content(Model.ImageThumbnailUrl)" alt="" />
        <div class="caption">
            <h3 class="pull-right">@Model.Price.ToString("c")</h3>
            <h3><a>@Model.DrinkName</a></h3>
        </div>
        <p>@Model.ShortDescription</p>
    </div>
</div>
